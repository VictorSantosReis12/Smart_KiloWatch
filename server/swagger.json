        },
        {
            "name": "Atividades",
            "description": "Registro e controle das atividades que envolvem consumo de água nas residências."
        },
        {
            "name": "Consumos de Energia",
            "description": "Monitoramento e registro do consumo de energia elétrica por eletrodomésticos."
        },
        {
            "name": "Consumos de Água",
            "description": "Monitoramento e registro do consumo de água por atividades."
        },
        {
            "name": "Metas",
            "description": "Definição e acompanhamento de metas de economia de energia e água pelos usuários."
        },
        {
            "name": "Custos",
            "description": "Cálculo e exibição dos custos relacionados ao consumo de água e energia."
        },
        {
            "name": "Notificações",
            "description": "Envio de alertas e lembretes sobre consumo, metas e outras atividades relevantes."
        },
        {
            "name": "Nodemailer",
            "description": "Serviço de envio de e-mails ao suporte."
        },
        {
            "name": "Residências",
            "description": "Gerenciamento das informações das residências cadastradas pelos usuários."
        },
        {
            "name": "Tarifas",
            "description": "Configuração e controle das tarifas de energia e água utilizadas nos cálculos de consumo."
        }
    ],
